<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.coordination.mapper.styleMapper">

    <!-- <select id="selectStyle" resultType="styleVO">
    	SELECT * 
    	FROM STYLE
    	WHERE 1=1
    	<if test="data != null">
    		AND data=#{data} OR data=#{color} OR data=#{shopcode} OR data=#{url}
    	</if>
    </select> -->
    
    <select id="selectStyle" resultType="styleVO" parameterType="hashmap">
    	SELECT * 
    	FROM STYLE
    	where
        <foreach collection="data" item="item" index="index" separator="or">
            data = #{item}
        </foreach>
	</select>
    
    <insert id="insertStyle">
    	INSERT INTO STYLE(
    		img_name, data, color, ref, shopcode, url
    		)VALUES(
    		#{img_name}, #{data}, #{color}, #{ref}, #{shopcode}, #{url}
    		)
    </insert>
    
    <update id="updateStyle">
    	UPDATE STYLE
    		SET
    		data=#{data},
    		color=#{data},
    		ref=#{ref},
    		url=#{url}
    		WHERE num=#{num}
    </update>
    
    <delete id="deleteStyle">
    	DELETE FROM STYLE WHERE num=#{num}
    </delete>
    
</mapper>